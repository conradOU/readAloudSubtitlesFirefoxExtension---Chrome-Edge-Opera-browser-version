{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "version": "0.1.7.10",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["storage"],
  "action": {
    "default_popup": "settings.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "all_frames": false,
      "run_at": "document_end",
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["settings.html", "content.js"],
      "matches": ["*://*/*"]
    }
  ],
  "options_ui": {
    "page": "settings.html",
    "browser_style": false
  },
  "author": "conrad.rzuc@gmail.com",
  "homepage_url": "https://github.com/conradRz/"
}
