{
  "manifest_version": 3,
  "name": "YouTube Subtitle Reader",
  "version": "0.1",
  "description": "A Chrome extension that reads YouTube subtitles out loud using TTS.",
  "icons": {
    "48": "icon.png"
  },
  "permissions": ["storage", "scripting"],
  "action": {
    "default_popup": "settings.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "all_frames": false,
      "run_at": "document_end",
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {   
      "resources": ["settings.html", "content.js"],
      "matches": ["*://*/*"]
    }
  ],
  "options_ui": {
    "page": "settings.html",
    "browser_style": false
  },
  "author": "Conrad Rzuc",
  "homepage_url": "https://github.com/conradOU/readOutLoudSubtitlesFirefoxExtension---Chrome-browser-version"
}